FROM webhippie/golang:1.17-arm@sha256:594c1e2df194fc80ffe9beef66dd654dafaeb3ca5a4c7da19d9f68a98918f832 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm@sha256:02c9c5a2c2242fe8c306c4cbb155d4549a6a4d375eb3250028b9f55b606eeba6

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

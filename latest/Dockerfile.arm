FROM webhippie/golang:1.19-arm@sha256:43f8bdf03bea4b60fe3827eb75a022e9154e360936a8a7df3d4d104ab91c734a as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.5.1

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm@sha256:a0e257f61b951db6b2dc73c1bedf4ff84bc2058e9bb85e77ad613a91c3ede495

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

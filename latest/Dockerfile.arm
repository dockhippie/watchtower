FROM ghcr.io/dockhippie/golang:1.23-arm@sha256:8af8b7d4ae5fde2a90fc965c445e50b6d10e5fff804b6b9e3e750bf6b5ff2b26 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.5.3

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:2bcdf76272803da29948b5130949c9a5c59ba9e9f7f737ce623dc1bb13f3022e

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

FROM webhippie/golang:1.16-arm@sha256:0d1bf4d3a00c58423d14a30e520d2cc16afab1959b910adfd4cca7bb97f1b71c as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.3.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm@sha256:e49de1ac7cf99a6e058858a97c587a7692036e797bb72891c61c9b24e0975002

WORKDIR /root
ENTRYPOINT ["/usr/bin/entrypoint"]
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

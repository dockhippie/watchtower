FROM webhippie/golang:1.18-arm@sha256:a9fdae9a77fe6ff4785c698fdd100bef4a54259e73893f66df0cce3d0e67f5a6 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm@sha256:b7607b58486194dc639975b1da78e7ae8e17d59a7250c27f9f89aec4e5e698e8

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

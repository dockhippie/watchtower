FROM webhippie/golang:1.19-arm@sha256:b5a80f7a5f202fa45d0f8d15d6e717053b245f6b91ce0ab76e8b8ca9e74145bb as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.5.1

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm@sha256:3522dccc5498ab8a0595ee444f1a8ed89737dd98fc574b9d90394ad1a599095c

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

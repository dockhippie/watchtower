FROM webhippie/golang:1.19-arm@sha256:c9b803a8b9b4a0884d101eff4b5897e1cec53ca272b7a501c280ff771acf3a38 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.5.1

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm@sha256:4e14e9f0c1e7d3b8eb48692fa10fb32bf4876f7a12e711b8b41ffc4a3cd9ab35

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

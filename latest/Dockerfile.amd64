FROM webhippie/golang:1.16-amd64@sha256:2c53e6b2dd1203b8cec69d91fc4b443c0d573be8e6a9df2bdedbd81f980e3218 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.3.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-amd64@sha256:4fe9cc73b2760897b414eccd39e8fdc3164091d6793ace18563ee3899a2e3071

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

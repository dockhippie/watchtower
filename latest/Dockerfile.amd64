FROM webhippie/golang:1.16-amd64@sha256:85d777fbc4662e1c090ddf5d8ddcd678e61aba306e059eaa4a1f87e97330d748 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.3.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-amd64@sha256:9adcc3f293637e5148d2746e75f86274b47a33e038b9fc6ff8f3110b8a7b4fb6

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

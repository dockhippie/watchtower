FROM webhippie/golang:1.17-amd64@sha256:6a8b992c0b945788e8249bdc3d5126aa0d48a6f1e30cacda2b927fb5967e755a as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-amd64@sha256:c32b5fb9cc8ff7115073a709716d0df938d74a55a9cbe5a80aa5c5c8817f006f

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

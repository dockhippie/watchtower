FROM webhippie/golang:1.16-amd64@sha256:eca78050af81a20c6b2848747998a3cb6ddc557a804a595986b5f7b97dfbff1e as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.3.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-amd64@sha256:fe8d7dfcb47475d79ed7dc902141d8c9c5d8a0fae6f8b0c4928e5279f959d7e4

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

FROM webhippie/golang:1.16-amd64@sha256:85d777fbc4662e1c090ddf5d8ddcd678e61aba306e059eaa4a1f87e97330d748 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.3.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-amd64@sha256:a8269aaaf8f79fc58c1db02f9438a2006c5c9f70a8b9bad950219a65d5492e55

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

FROM webhippie/golang:1.17-arm64@sha256:aeec70e5e2da08dee55e8dfa0b437fd488dd68dbee5b7fea95651c65f38aa3d1 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm64@sha256:2d49635ac3847b2a4f47728df2166ec13d6f498711d49c2d27b8d91544fa9cff

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

FROM webhippie/golang:1.17-arm64@sha256:32ac1234e50cda31e12fc7ece42f2c8ff0193c1e3ab9abaee3c010e51c3fe1d1 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm64@sha256:0d1498ef1220d3f5c3350541048d041dc674305badc77c9fc674716f4d0ae258

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

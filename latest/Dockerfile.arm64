FROM webhippie/golang:1.16-arm64@sha256:4ebf2943e43f1cc228edeed6c2c591f06a9ebb2cefbc7726027124062c9ac15c as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.3.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm64@sha256:0451bfcbfd0fe8f917d00eaffde469a745a091d4752d7a0fc48a25135c7df3a0

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

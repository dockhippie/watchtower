FROM webhippie/golang:1.18-arm64@sha256:b4966f7edf904d66fd97a570dc2b04dba4a10e354940d1d2050b287dea8481b2 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm64@sha256:713b4ae7c571ceafed3a6562a0d806bf554438ba41cbf03ad45ce257b5adb816

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

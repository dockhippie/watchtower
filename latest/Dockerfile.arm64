FROM webhippie/golang:1.16-arm64@sha256:d1ea898720c5516ea9f8a437bc221cd9b11c8bd181edf8f8b6eb212129c7da58 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.3.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm64@sha256:74814c596e105d4fa5f65d467064bf0997fa2ebe85a06d56116e19789ea85136

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

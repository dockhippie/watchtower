FROM ghcr.io/dockhippie/golang:1.23-amd64@sha256:1c019e186fc7d92ba1cd86542fa7fd912f58d343b913c5ca916952b81900bb50 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:f8f7abb21a6ca87f5ed2dc7bc093afef68e2d5b4506c61ae42e82fcdfcafdbcc

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

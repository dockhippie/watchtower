FROM ghcr.io/dockhippie/golang:1.23-amd64@sha256:41f22efdeadd2ec1011ee23facbdb84f13b02949d342d165064405966a792125 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:88b6f3b735ffc067e8f41b2a76c7d2c47f59c51dfcb78cfd91ca8025c8a96587

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

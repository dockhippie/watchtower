FROM ghcr.io/dockhippie/golang:1.21-amd64@sha256:50959a4424a76fef6f15bfcdaa74fbca98ec24bfd33d96ed14e06ea73c529a60 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:c2a50316fae41f5df6339e5755404dbc6ab05356bac538e2073d1f94d62a786e

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

FROM webhippie/golang:1.20-amd64@sha256:0bbbfb6b3932e2fc52667f72270e65479d1236879b51d1854b032d6d6ab109b1 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-amd64@sha256:f688fa160d4ce504380d1a9f7d1c5ef72597862e1872c576e944851552aab953

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

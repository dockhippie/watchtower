FROM ghcr.io/dockhippie/golang:1.21-amd64@sha256:ed2b3485bd34906ee696cb76d6fd2a46e98e1540850106898dbf5eb7888c3704 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:5ab66c89e3757ba671ef831c384fb2f157b809476a853a78bb474a56fe3f6e54

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

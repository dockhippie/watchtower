FROM webhippie/golang:1.18-arm@sha256:434b2e440d0b2ddecb1142ab1f97bf4c270d5665390a3131aff2babd54d03ffb as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm@sha256:4e14e9f0c1e7d3b8eb48692fa10fb32bf4876f7a12e711b8b41ffc4a3cd9ab35

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

FROM webhippie/golang:1.19-arm64@sha256:889a13cfa6245eb63bd4c8c7175bdece6d4d833b1162df3027c3444d3d69f974 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm64@sha256:e931767e6f9c9b53f4f70b5373ed9c5616e639d0d7ddde1d351e750dc2a03ed2

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

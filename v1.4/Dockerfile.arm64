FROM ghcr.io/dockhippie/golang:1.21-arm64@sha256:3d93879b2d744cc83109bbe0729e5f55ba6d090c813f99f74431a08e21dd3cf0 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:fa2f6b1151ac0336a90785b17436572a9797284b9eb833d14c13de45a4ba1ef2

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

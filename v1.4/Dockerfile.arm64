FROM ghcr.io/dockhippie/golang:1.21-arm64@sha256:3d93879b2d744cc83109bbe0729e5f55ba6d090c813f99f74431a08e21dd3cf0 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:e2b707cd6cb133485f944ec4f7dd50e13f7bb21300774df2bc93919fa8ddc608

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

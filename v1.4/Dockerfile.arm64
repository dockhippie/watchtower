FROM webhippie/golang:1.18-arm64@sha256:34b2dc4d1b29b7c71da4d41dd799880373908173b4b71afb0e0ab2fe04c4d122 as build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM webhippie/alpine:latest-arm64@sha256:bfd0976b1d609a9ae51e26d516f7bf73cc9ab1c708ce519cdc96c7bd8f14300f

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

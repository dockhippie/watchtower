FROM ghcr.io/dockhippie/golang:1.25-arm64@sha256:bce7f50c07a99256d7dbf267c4bbc7b8b26bcb3089e14492006b6017c4c53f77 AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.4.0

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:f4b59ed8900bb70e5ad839ccba05458cb8d09fabdcf2b07f07818aa322e88828

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /

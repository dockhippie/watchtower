FROM ghcr.io/dockhippie/golang:1.21-arm64@sha256:93e14439a9c408b8274526b203a12698980c5254e07a9464d7d49b3d4d38cb8d AS build

# renovate: datasource=github-tags depName=containrrr/watchtower
ENV WATCHTOWER_VERSION=v1.5.3

RUN git clone -b ${WATCHTOWER_VERSION} https://github.com/containrrr/watchtower.git /srv/app/src && \
  cd /srv/app/src && \
  GO111MODULE=on go install

FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:0dfcbf91ff95665b3b4fdc18b2f3bc1594a45f53d56f0475d0d13a39de6a1798

WORKDIR /root
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  rm -rf /var/cache/apk/*

COPY --from=build /srv/app/bin/watchtower /usr/bin/watchtower
COPY ./overlay /
